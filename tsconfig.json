{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared": ["./types/index.ts"],
      "@shared/*": ["./types/*"]
    }
  },
  "include": ["types/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "app/**/*", "server/**/*"]
}