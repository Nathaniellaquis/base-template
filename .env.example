# ============================================
# Frontend Configuration (Expo/React Native)
# ============================================
# All frontend env vars MUST start with EXPO_PUBLIC_

# API endpoint (change for production)
EXPO_PUBLIC_API_URL=http://localhost:3000

# Firebase Web App Configuration
# Get these values from your Firebase console > Project settings > Your apps > Web app
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id

# ============================================
# Backend Configuration (Express/Node.js)
# ============================================

# Environment
NODE_ENV=development
PORT=3000

# MongoDB Connection
# For local MongoDB: mongodb://localhost:27017/your-db-name
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/your-db-name
MONGODB_URI=mongodb://localhost:27017/your-db-name

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id


# Option 3: Use inline credentials (not recommended for production)
# FIREBASE_ADMIN_CREDENTIALS='{"type":"service_account",...}'

# ============================================
# Stripe Configuration
# ============================================

# Stripe Secret Key (Backend)
# Get from Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe Webhook Secret (Backend)
# Get from Stripe Dashboard > Developers > Webhooks > Your webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (Backend)
# Create products and prices in Stripe Dashboard > Products
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly_id
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# Stripe Publishable Key (Frontend)
# Get from Stripe Dashboard > Developers > API keys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Stripe Merchant ID for Apple Pay (Frontend)
# Required for Apple Pay on iOS
EXPO_PUBLIC_STRIPE_MERCHANT_ID=merchant.com.ingrd

# ============================================
# PostHog Analytics Configuration
# ============================================

# PostHog API Key (Frontend)
# Get from PostHog > Project Settings > API Keys
EXPO_PUBLIC_POSTHOG_API_KEY=phc_your-posthog-api-key

# PostHog Host (Frontend)
# US Cloud: https://us.i.posthog.com
# EU Cloud: https://eu.i.posthog.com
# Self-hosted: your-posthog-instance.com
EXPO_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com